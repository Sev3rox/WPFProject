<Window x:Class="ProjektWPF.Zawodnicy.DetailsZawodnik"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektWPF.Zawodnicy"
        mc:Ignorable="d"
        Title="DetailsZawodnik" Height="750" Width="600"  FontSize="16">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition  Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label Margin="5">Imie:</Label>
        <StackPanel Grid.Row="1">
            <Label  Margin="5">Nazwisko:</Label>
            <Label  Margin="5">Wiek:</Label>
        </StackPanel>
        <Label Grid.Row="2" Margin="5,5,100,30">Adres:</Label>
        <Label Grid.Row="3" Margin="5">Pozycja:</Label>
        <Label Grid.Row="4" Margin="5,5,5,5"  VerticalAlignment="Top">Numer:</Label>
        <StackPanel HorizontalAlignment="Center" Margin="20" Orientation="Horizontal" Grid.Row="5" Grid.ColumnSpan="2">
            <CheckBox IsChecked="True" IsEnabled="False" Margin="5,5,200,5">Lewonożny</CheckBox>
            <CheckBox IsEnabled="False" Margin="5">Prawonożny</CheckBox>
        </StackPanel >
        <StackPanel Grid.ColumnSpan="2" HorizontalAlignment="Center"  Orientation="Horizontal" Grid.Row="6">
            <Label  Margin="5">Liczba spotkań:</Label>
            <Label  Margin="5,5,100,5">30</Label>
            <Label  Margin="5">Gole:</Label>
            <Label  Margin="5,5,100,5">32</Label>
            <Label  Margin="5">Asysty:</Label>
            <Label  Margin="5">16</Label>
        </StackPanel >

        <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label  Margin="5,5,2,5">Minuty gry:</Label>
            <Label  Margin="5,5,80,5">800</Label>
            <Label  Margin="5,5,2,5">Strzały</Label>
            <Label  Margin="5,5,80,5">80</Label>
            <Label  Margin="5">Strzały na bramke</Label>
            <Label  Margin="5,5,5,5">60</Label>
        </StackPanel>

        <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Image Width="50" Height="auto" Margin="5" Source="../Files/redcard.png"></Image>
            <Label  Margin="5,5,250,5">1</Label>
            <Image Width="28" Height="auto" Margin="5,5,15,5" Source="../Files/yellowcard.jpg"></Image>
            <Label  Margin="5">5</Label>
        </StackPanel>
        <StackPanel VerticalAlignment="Center" Orientation="Horizontal" Grid.Row="9" Grid.RowSpan="1" Grid.ColumnSpan="2">
            <StackPanel VerticalAlignment="Center" Margin="100,20,100,20">
                <Label Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">FC</Label>
                <Label Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">Bayern</Label>
                <Label Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">Munchen</Label>
            </StackPanel>
            <Image  Margin="10" Source="../Files/logo.png"></Image>
        </StackPanel>

        <Label  Grid.Column="1" Margin="5"  Content="Robert" />
        <StackPanel Grid.Column="1" Grid.Row="1">
            <Label Margin="5" Content="Lewandowski" />
            <Label Margin="5" Content="32" />
        </StackPanel>
        <Label Grid.Column="1" Grid.Row="2" Margin="5" Content="Bayern St. Pete 99"/>
        <Label Grid.Column="1" Grid.Row="3" Margin="5" Content="Napastnik"></Label>
        <Label Grid.Column="1" Grid.Row="4" Margin="5" Content="9"></Label>

        <Button Margin="10" Padding="60,6" FontSize="18"  HorizontalAlignment="Center" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="10" Click="Close">Zamknij</Button>
    </Grid>
</Window>

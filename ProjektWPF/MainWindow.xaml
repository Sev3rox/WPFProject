                            <Label Grid.Row="3" Margin="5,5,5,10">Miejsce :</Label>


                            <Grid Grid.Row="6" Grid.RowSpan="1" Grid.ColumnSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Image Name="Image1" Grid.Column="0"  Margin="15,15,15,15"  ></Image>

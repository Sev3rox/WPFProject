                                <TextBlock TextWrapping="WrapWithOverflow"  Margin="100,20,100,20" VerticalAlignment="Center" MaxWidth="160" HorizontalAlignment="Center" Text="{Binding Path=Druzyna.Nazwa}" ></TextBlock>



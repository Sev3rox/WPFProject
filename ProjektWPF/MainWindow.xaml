                            </StackPanel>

                            <Label  Grid.Column="1" Margin="5"  Content="{Binding Path=Name,UpdateSourceTrigger=PropertyChanged}" />
                            <Label Grid.Column="1" Grid.Row="1" Margin="5" Content="{Binding Path=Surname,UpdateSourceTrigger=PropertyChanged}"/>
